use strict;
use warnings;

if ($#ARGV != 1) {
   # print usage message
   print STDERR "Usage: $0 initfile command[:command]\n";
   exit 1;
}

my ($initfile, $cmdlist) = @ARGV;

if (! -r $initfile) {
   print STDERR "Cannot read $initfile\n";
   exit 1
}

# source module init file
require $initfile;

# execute command list
my $code = 0;
foreach my $cmd (split ':', $cmdlist) {
   if (! &module($cmd)) {
      $code = 1;
   }
}

exit $code;

