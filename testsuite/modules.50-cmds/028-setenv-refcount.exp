unset ts_lisp

unset tsmod_sh
unset tsmod_csh
unset tsmod_fish
unset tsmod_tcl
unset tsmod_perl
unset tsmod_python
unset tsmod_lisp

unset lmfmod_sh
unset lmfmod_csh
unset lmfmod_fish
unset lmfmod_tcl
unset lmfmod_perl
unset lmfmod_python
unset lmfmod_lisp

unset lmmod_sh
unset lmmod_csh
unset lmmod_fish
unset lmmod_tcl
unset lmmod_perl
unset lmmod_python
unset lmmod_lisp

unset modulefile
unset module
