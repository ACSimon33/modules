set env(LESS) $opts
pager_test_case "" 0 "-" $cmd ""
pager_test_case "--paginate" 0 "1" $cmd ""
pager_test_case "--no-pager" 0 "0" $cmd ""

set cmd "/usr/bin/more"
if { $verbose > 0 } {
