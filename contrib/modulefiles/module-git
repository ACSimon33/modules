#%Module1.0#####################################################################
##
## module-git modulefile
##
proc ModulesHelp { } {
    puts stderr "\tThis module will set up an alias for easy anonymous"
    puts stderr "\tcheck-out last version of the modules-tcl package"
    puts stderr "\tget-modules   - retrieve last version of modules-tcl sources"
}

module-whatis   "get last version of the module-tcl sources from SourceForge.net"

set-alias get-modules "git clone git://git.code.sf.net/p/modules/modules-tcl modules-tcl && cd modules-tcl"

if [ module-info mode load ] {
    ModulesHelp
}
