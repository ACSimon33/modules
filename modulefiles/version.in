#%Module1.0#####################################################################
##
## version modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\tadds the MODULE_VERSION environment variable"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"adds the MODULE_VERSION environment variable"

# for Tcl script use only
set     version      @VERSION@

if [ module-info mode load ] {
# get rid of old version
	module		unload			modules
	setenv		MODULE_VERSION		@VERSION@
}
if [ module-info mode remove ] {
 unsetenv MODULE_VERSION [lindex [split $env(MODULE_VERSION_STACK) : ] 1 ]
}
if [ module-info mode load ] {
# bring in new version
	module		load			modules
}
prepend-path 	MODULE_VERSION_STACK	@VERSION@

