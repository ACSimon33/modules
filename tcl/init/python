import os, string

os.environ['MODULESHOME'] = '/mips/tools/mips/envmodule'

if not os.environ.has_key('MODULEPATH'):
        os.environ['MODULEPATH'] = '/mips/tools/freeware/modulefiles'

if not os.environ.has_key('LOADEDMODULES'):
        os.environ['LOADEDMODULES'] = '';

def module(command, *arguments):
        commands = os.popen('/mips/tools/mips/envmodule/modulecmd.tcl python %s %s' % (command, string.join(arguments))).read()
        exec commands
